// Use enum datatype to store days of the week.
#include<stdio.h>
int main()
{
  enum week_day {SUN, MON, TUE, WED, THU, FRI, SAT};
  enum week_day day;
  printf("%d %d %d %d %d %d %d",SUN, MON, TUE, WED, THU, FRI, SAT);
  return 0;
}

// WAP and declare 4 variable of bool types. 
#include<stdio.h>
#include<stdbool.h>
int main()
{
  bool a1 = true;
  bool a2 = false;
  bool a3 = 0;
  bool a4 = 17;
  printf("%d %d %d %d", a1, a2, a3, a4);
  return 0;
}

// Program to printing a variable and observe the output.
#include<stdio.h>
int main()
{
  int a = 1708;
  printf("%d",a);
  return 0;
}

// WAP tp print the ASCII value of any key pressed.
#include<stdio.h>
int main()
{
  char ar;
  printf("enter any key\n");
  scanf("%c",&ar);
  printf("%d",ar);
  return 0;
}

// WAP to define a const integer abd print the value.
#include<stdio.h>
int main()
{
  const int a=8;
  printf("%d",a);
  return 0;
}

// WAP try to change the const int value.
#include<stdio.h>
int main()
{
  const int a=5;
  a=6;   // Does not overwrite
  printf("%d",a);   // Displays error
  return 0;
}

//WAP to initialize a variable name as any keyword.
#include<stdio.h>
int main()
{
  int else = 5;
  printf("%d", else);
  return 0;
}

// Assign e
#include<stdio.h>
int main()
{
  int ar;
  printf("enter the ASCII value\n");
  scanf("%d",&ar);
  printf("%c",ar);
  return 0;
}

// Assign f
#include<stdio.h>
int main()
{
  float a=17.17102001080420061437;
  float r=28.28213112191531172548;
  float res;
  result=a+b;
  printf("%0.19f",result);
  return 0;
}

// Assign g
#include<stdio.h>
int main()
{
  char character,up_case;
  printf("enter character:\n");
  scanf("%c",&character);
  up_case=toupper(character);
  printf("%c",up_case);
  return 0;
}

// Assign h
#include<stdio.h>
int main()
{
  int a1;
  float a2;
  char a3;
  long a4;
  double a5;
  unsigned long a6;
  printf("%d %d %d %d %d %d", sizeof(a1), sizeof(a2), sizeof(a3), sizeof(a4), sizeof(a5), sizeof(a6));
  return 0;
}
